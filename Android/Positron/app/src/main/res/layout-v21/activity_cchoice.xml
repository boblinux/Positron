<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_dark"
    tools:context="fr.univtln.groupc.activities.profil.CChoiceActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/menu">
    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/player_profil"
                android:onClick="setPlayerProfilActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/player_profil"
                android:layout_weight="1"
                android:layout_marginBottom="10sp"
                />


            <Button
                android:id="@+id/competences_tree"
                android:onClick="setSkillTreeActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/competences_tree"
                android:layout_weight="1"
                android:layout_marginBottom="10sp"
                />

            <Button
                android:id="@+id/parameters"
                android:onClick="setPositronParameters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/positron_parameters"
                android:layout_weight="1"
                android:layout_marginBottom="10sp"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disconnection_button"
                android:id="@+id/return_to_map"
                android:background="@color/red"
                android:layout_weight="0.25"
                android:backgroundTint="@color/colorAccent"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <at.markushi.ui.CircleButton
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@mipmap/logatom"
            app:cb_color="#000000"
            app:cb_pressedRingWidth="8dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mettre stats ici"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/view3"
            android:layout_alignEnd="@+id/view3" />

        <at.markushi.ui.CircleButton
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@mipmap/logxenom"
            app:cb_color="#000000"
            app:cb_pressedRingWidth="8dip"
            android:id="@+id/view3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mettre stats ici"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</LinearLayout>
