<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80sp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/colorPrimary"
    tools:context="fr.univtln.groupc.activities.CDrawerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <ImageButton
           android:layout_width="50sp"
           android:layout_height="50sp"
           android:background="@mipmap/drone"
           android:backgroundTint="@color/colorAccent"
           android:layout_gravity="center"
           />

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@mipmap/radar"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"/>

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@mipmap/pcvol"
            android:layout_gravity="center" />


        <ImageButton
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@mipmap/brouilleur"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginBottom="50sp"/>

        <CheckedTextView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@mipmap/portail"
            android:layout_gravity="center"/>

        <CheckedTextView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@mipmap/chat"
            android:backgroundTint="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_marginBottom="50sp"/>/>

        <Button
            android:id="@+id/bzoomin"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="+" />
        <Button
            android:id="@+id/bzoomout"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="â€”" />

    </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
